{
    "extends": [
        "stylelint-config-sass-guidelines",
        "stylelint-config-recommended",
        "stylelint-config-styled-components"
    ],
    "overrides": [
        {
            "files": ["**/*.scss"],
            "customSyntax": "postcss-scss"
        }
    ],
    "rules": {
        "indentation": 4,
        "max-nesting-depth": 3,
        "number-leading-zero": null
    }
}
