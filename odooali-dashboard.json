{
  "id": null,
  "title": "OdooAli Monitoring",
  "tags": ["odooali", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Backend CPU Usage",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{container=\"odooali_backend\"}[1m])",
          "legendFormat": "CPU"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Backend Memory Usage",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{container=\"odooali_backend\"}",
          "legendFormat": "Memory"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests (Django)",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"django\"}[5m]))",
          "legendFormat": "Requests/s"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Nginx Active Connections",
      "targets": [
        {
          "expr": "nginx_connections_active",
          "legendFormat": "Active Conns"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Nginx Request Rate",
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total[1m])",
          "legendFormat": "Requests/s"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Postgres Active Connections",
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=\"odooali\"}",
          "legendFormat": "Active Conns"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Postgres Cache Hit Ratio",
      "targets": [
        {
          "expr": "(sum(rate(pg_stat_database_blks_hit[5m])) / (sum(rate(pg_stat_database_blks_hit[5m])) + sum(rate(pg_stat_database_blks_read[5m])))) * 100",
          "legendFormat": "Hit Ratio %"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Postgres Deadlocks",
      "targets": [
        {
          "expr": "pg_stat_database_deadlocks{datname=\"odooali\"}",
          "legendFormat": "Deadlocks"
        }
      ]
    }
  ]
}
