{
  "info": {
    "name": "OdooAli API",
    "_postman_id": "odooali-col-001",
    "description": "Postman collection for OdooAli project (accounts + JWT auth)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"ali\",\n  \"email\": \"ali@example.com\",\n  \"password\": \"123456@adg\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/accounts/register/",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts", "register", ""]
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"ali\",\n  \"password\": \"123456@adg\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/accounts/token/",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts", "token", ""]
        }
      },

      "response": [],

      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let response = pm.response.json();",
              "if(response.access){",
              "    pm.environment.set('jwt_token', response.access);",
              "    console.log('JWT token saved ✅');",
              "} else {",
              "    console.warn('No access token found ❌');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/accounts/profile/",
          "host": ["{{base_url}}"],
          "path": ["api", "accounts", "profile", ""]
        }
      },
      "response": []
    }
  ]
}
